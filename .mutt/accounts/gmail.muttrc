# Einstellungen für GMail
set from = "martin.darmuentzel@gmail.com"
set hostname = "gmail.com"

# Wie wird gesendet?
set sendmail = "/usr/bin/msmtp -a gmail"

# relevante Ordner:
set spoolfile = "+gmail/GMail"
set mbox = "+gmail/archive"
set postponed = "+gmail/drafts"
set trash = "+gmail/trash"

# Gesendete E-Mails nicht speichern, das macht Google Mail allein:
unset record

# für den 'A'-Hotkey lesen wir hotkeys.muttrc nochmals ein:
source ~/.mutt/hotkeys.muttrc
