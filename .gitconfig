	email = martin@trivialanalog.de
[core]
	editor = vim
	pager = less
[color]
	ui = auto
	diff = auto
	status = auto
	interactive = auto
	branch = auto
[diff]
	mnemonicprefix = true
[merge]
	tool = vimdiff
	summary = true
[alias]
	st = status -sb
	ci = commit -v
	br = branch
	co = checkout
	df = diff
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	ad = add
	unstage = reset HEAD
[push]
	default = matching
