[user]
	name = Martin Darm√ºntzel
	email = git@trivialanalog.de
[core]
	editor = vim
	pager = less
	packedGitWindowSize = 16m
	packedGitLimit = 64m
[pack]
	windowMemory = 64m
	packSizeLimit = 64m
	thread = 1
	deltaCacheSize = 1m
[color]
	ui = auto
[diff]
	mnemonicprefix = true
[merge]
	tool = vimdiff
[alias]
	st = status
	ci = commit -v
	br = branch
	co = checkout
	df = diff
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	ad = add
