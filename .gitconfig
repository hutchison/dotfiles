[user]
	name = Martin Darm√ºntzel
	email = git@trivialanalog.de
[core]
	editor = vim
	pager = less
[color]
	ui = auto
[diff]
	mnemonicprefix = true
[merge]
	tool = vimdiff
[push]
    default = current
[alias]
	st = status -bs
	ci = commit -v
	br = branch
	co = checkout
	df = diff
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	ad = add
	mff = merge --no-ff --log
